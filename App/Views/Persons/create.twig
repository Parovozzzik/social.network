<div class="g-pa-20">
    <div class="row">
        {{ include ('/App/Views/Users/view_sidebar.twig', {user:data.model}) }}

        <div class="col-md-9">
            <div class="h-100 g-brd-around g-brd-gray-light-v7 g-rounded-4 g-pa-15 g-pa-20--md">
                <form action="/persons/create" method="post" class="js-validate" novalidate="novalidate">
                    <header>
                        <h2 class="text-uppercase g-font-size-12 g-font-size-default--md g-color-black mb-0">
                            General information
                        </h2>
                    </header>

                    <hr class="d-flex g-brd-gray-light-v7 g-my-15 g-my-30--md">

                    <div class="row g-mb-20">
                        <div class="col-md-3 align-self-center g-mb-5 g-mb-0--md">
                            <label class="mb-0" for="firstName">First name</label>
                        </div>

                        <div class="col-md-9 align-self-center">
                            <div class="form-group g-pos-rel mb-0">
                                <span class="g-pos-abs g-top-0 g-right-0 d-block g-width-40 h-100 opacity-0 g-opacity-1--success">
                                    <i class="hs-admin-check g-absolute-centered g-font-size-default g-color-secondary"></i>
                                </span>
                                <input id="firstName" name="person[firstName]"
                                       class="form-control h-100 form-control-md g-brd-gray-light-v7 g-brd-lightblue-v3--focus g-brd-primary--error g-rounded-4 g-px-20 g-py-12"
                                       type="text" value="{{ params['request']['firstName'] }}" required="required"
                                       data-msg="This field is mandatory" data-error-class="u-has-error-v3"
                                       data-success-class="has-success" aria-required="true">
                                {% if data['errors']['firstName']|length > 0 %}
                                    <small class="g-font-weight-300 g-font-size-12 g-color-red g-pt-5">
                                        {{ data['errors']['firstName'] }}
                                    </small>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="row g-mb-20">
                        <div class="col-md-3 align-self-center g-mb-5 g-mb-0--md">
                            <label class="mb-0" for="last_name">Last name</label>
                        </div>

                        <div class="col-md-9 align-self-center">
                            <div class="form-group g-pos-rel mb-0">
                                <span class="g-pos-abs g-top-0 g-right-0 d-block g-width-40 h-100 opacity-0 g-opacity-1--success">
                                    <i class="hs-admin-check g-absolute-centered g-font-size-default g-color-secondary"></i>
                                </span>
                                <input id="lastName" name="person[lastName]"
                                       class="form-control h-100 form-control-md g-brd-gray-light-v7 g-brd-lightblue-v3--focus g-brd-primary--error g-rounded-4 g-px-20 g-py-12"
                                       type="text" value="{{ params['request']['lastName'] }}" required="required" data-msg="This field is mandatory"
                                       data-error-class="u-has-error-v3" data-success-class="has-success"
                                       aria-required="true">
                                {% if data['errors']['lastName']|length > 0 %}
                                    <small class="g-font-weight-300 g-font-size-12 g-color-red g-pt-5">
                                        {{ data['errors']['lastName'] }}
                                    </small>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="row g-mb-20">
                        <div class="col-md-3 align-self-center g-mb-5 g-mb-0--md">
                            <label class="mb-0" for="dateBirth">Date Birth</label>
                        </div>

                        <div class="col-md-9 align-self-center">
                            <div class="form-group g-pos-rel mb-0">
                                <span class="g-pos-abs g-top-0 g-right-0 d-block g-width-40 h-100 opacity-0 g-opacity-1--success">
                                    <i class="hs-admin-check g-absolute-centered g-font-size-default g-color-secondary"></i>
                                </span>
                                <div id="datepicker" class="u-datepicker-right u-datepicker--v3 g-pos-rel w-100 g-cursor-pointer g-brd-around g-brd-gray-light-v7 g-rounded-4">
                                    <input class="js-range-datepicker w-100 g-bg-transparent g-font-size-12 g-font-size-default--md g-color-gray-dark-v6 g-pr-80 g-pl-15 g-py-9"
                                           type="text" name="person[dateBirth]" id="dateBirth" placeholder="Select Date" data-rp-wrapper="#datepicker" data-rp-date-format="Y.m.d"
                                           value="{{ params['request']['dateBirth'] }}"
                                    >
                                    <div class="d-flex align-items-center g-absolute-centered--y g-right-0 g-color-gray-light-v6 g-color-lightblue-v9--sibling-opened g-mr-15">
                                        <i class="hs-admin-calendar g-font-size-18 g-mr-10"></i>
                                        <i class="hs-admin-angle-down"></i>
                                    </div>
                                </div>
                                {% if data['errors']['dateBirth']|length > 0 %}
                                    <small class="g-font-weight-300 g-font-size-12 g-color-red g-pt-5">
                                        {{ data['errors']['dateBirth'] }}
                                    </small>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="row g-mb-20">
                        <div class="col-md-3 align-self-center g-mb-5 g-mb-0--md">
                            <label class="mb-0" for="gender">Gender</label>
                        </div>

                        <div class="col-md-9 align-self-center">
                            <div class="btn-group justified-content">
                                <label class="u-check">
                                    <input class="g-hidden-xs-up g-pos-abs g-top-0 g-left-0" name="person[gender]" checked="" value="male" type="radio">
                                    <span class="btn btn-md btn-block u-btn-outline-lightgray g-color-white--checked g-bg-primary--checked rounded-0">Male</span>
                                </label>
                                <label class="u-check">
                                    <input class="g-hidden-xs-up g-pos-abs g-top-0 g-left-0" name="person[gender]" value="female" type="radio">
                                    <span class="btn btn-md btn-block u-btn-outline-lightgray g-color-white--checked g-bg-primary--checked g-brd-left-none--md rounded-0">Female</span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <button class="btn btn-md btn-block u-btn-blue rounded text-uppercase g-py-13" type="submit">
                        Save
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>