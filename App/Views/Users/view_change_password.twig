<div class="g-pa-20">
    <div class="row">
        {{ include ('/App/Views/Users/view_sidebar.twig', {user:data.model}) }}

        <div class="col-md-9">
            <div class="h-100 g-brd-around g-brd-gray-light-v7 g-rounded-4 g-pa-15 g-pa-20--md">
                {% if (params['request']|length == 0 or data['errors']|length > 0) %}
                <form class="js-validate" novalidate="novalidate" method="post" action="/users/change-password">

                    <header>
                        <h2 class="text-uppercase g-font-size-12 g-font-size-default--md g-color-black mb-0">
                            Change password
                        </h2>
                    </header>

                    <hr class="d-flex g-brd-gray-light-v7 g-my-15 g-my-30--md">

                    <div class="row g-mb-20">
                        <div class="col-md-3">
                            <label class="mb-0" for="#currentPassword">Current Password</label>
                        </div>

                        <div class="col-md-9 align-self-center">
                            <div>
                                <div class="form-group g-pos-rel mb-0">
                                    <input id="currentPassword" name="user[currentPassword]"
                                           class="form-control h-100 form-control-md g-brd-gray-light-v7 g-brd-lightblue-v3--focus g-brd-primary--error g-rounded-4 g-px-20 g-py-12"
                                           type="password" required="required" data-msg="This field is mandatory"
                                           data-error-class="u-has-error-v3" data-success-class="has-success"
                                           aria-required="true" value="{{ params['request']['currentPassword'] }}">
                                    {% if data['errors']['currentPassword']|length > 0 %}
                                    <small class="g-font-weight-300 g-font-size-12 g-color-red g-pt-5">
                                        {{ data['errors']['currentPassword'] }}
                                    </small>
                                    {% endif %}
                                </div>

                                <a class="form-text g-color-secondary" href="#">
                                    <small class="g-font-size-default g-mt-8">Forgot Your Password?</small>
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="row g-mb-20">
                        <div class="col-md-3 align-self-center g-mb-5 g-mb-0--md">
                            <label class="mb-0" for="#newPassword">New Password</label>
                        </div>

                        <div class="col-md-9 align-self-center">
                            <div class="form-group g-pos-rel mb-0">
                                <input id="newPassword" name="user[newPassword]"
                                       class="form-control h-100 form-control-md g-brd-gray-light-v7 g-brd-lightblue-v3--focus g-brd-primary--error g-rounded-4 g-px-20 g-py-12"
                                       type="password" required="required" data-msg="This field is mandatory"
                                       data-error-class="u-has-error-v3" data-success-class="has-success"
                                       aria-required="true" value="{{ params['request']['newPassword'] }}">
                                {% if data['errors']['newPassword']|length > 0 %}
                                    <small class="g-font-weight-300 g-font-size-12 g-color-red g-pt-5">
                                        {{ data['errors']['newPassword'] }}
                                    </small>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="row g-mb-20">
                        <div class="col-md-3 align-self-center g-mb-5 g-mb-0--md">
                            <label class="mb-0" for="#repeatPassword">Repeat Password</label>
                        </div>

                        <div class="col-md-9 align-self-center">
                            <div class="form-group g-pos-rel mb-0">
                                <input id="repeatPassword" name="user[repeatPassword]"
                                       class="form-control h-100 form-control-md g-brd-gray-light-v7 g-brd-lightblue-v3--focus g-brd-primary--error g-rounded-4 g-px-20 g-py-12"
                                       type="password" required="required" data-msg="This field is mandatory"
                                       data-error-class="u-has-error-v3" data-success-class="has-success"
                                       aria-required="true" value="{{ params['request']['repeatPassword'] }}">
                                {% if data['errors']['repeatPassword']|length > 0 %}
                                    <small class="g-font-weight-300 g-font-size-12 g-color-red g-pt-5">
                                        {{ data['errors']['repeatPassword'] }}
                                    </small>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <hr class="d-flex g-brd-gray-light-v7 g-my-15 g-my-30--md">

                    <div>
                        <button class="btn btn-md btn-xl--md u-btn-secondary g-width-160--md g-font-size-12 g-font-size-default--md g-mb-10"
                                type="submit">Save Changes
                        </button>
                        <button class="btn btn-md btn-xl--md u-btn-outline-gray-dark-v6 g-font-size-12 g-font-size-default--md g-mr-10 g-mb-10"
                                type="reset">Cancel
                        </button>
                    </div>
                </form>
                {% else %}
                    <div class="noty_bar noty_type__success noty_theme__unify--v1 g-mb-25">
                        <div class="noty_body">
                            <div class="g-mr-20">
                                <div class="noty_body__icon">
                                    <i class="hs-admin-check"></i>
                                </div>
                            </div>

                            <div>{{ data['message'] }}</div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>