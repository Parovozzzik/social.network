<div class="g-pa-20">
    <h1 class="g-font-weight-300 g-font-size-28 g-color-black g-mb-28">Confirmation Email</h1>
    <div class="row">
        <div class="col-md-6">
            {% if (data['errors']|length > 0) %}
                <div class="noty_bar noty_type__error noty_theme__unify--v1 g-mb-25">
                    <div class="noty_body">
                        <div class="g-mr-20">
                            <div class="noty_body__icon">
                                <i class="hs-admin-alert"></i>
                            </div>
                        </div>

                        <div>{{ data['errors'][0] }}</div>
                    </div>
                </div>
            {% else %}
                <div class="noty_bar noty_type__success noty_theme__unify--v1 g-mb-25">
                    <div class="noty_body">
                        <div class="g-mr-20">
                            <div class="noty_body__icon">
                                <i class="hs-admin-check"></i>
                            </div>
                        </div>

                        <div>{{ data['message'] }}</div>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>